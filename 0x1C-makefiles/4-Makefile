CC=gcc
SRC=holberton.c main.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM = rm -f
CFLAGS= -Wall -Werror -Wextra -pendantic
all: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)
$(OBJ): %.o: %.c
	$(CC) -c $(CFLAGS) 
.PHONY: clean oclean fclean re
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
